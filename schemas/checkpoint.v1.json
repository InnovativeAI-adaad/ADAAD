{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://adaad.local/schemas/checkpoint.v1.json",
  "title": "Governance Checkpoint v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "epoch_id",
    "checkpoint_digest",
    "recorded_at"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0"
    },
    "epoch_id": {
      "type": "string",
      "minLength": 1
    },
    "checkpoint_digest": {
      "type": "string",
      "minLength": 1
    },
    "recorded_at": {
      "type": "string",
      "format": "date-time"
    },
    "source": {
      "type": "string",
      "minLength": 1
    }
  }
}
