{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://adaad.local/schemas/scoring_input.v1.json",
  "title": "Governance Scoring Input v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "mutation_id",
    "epoch_id",
    "signals"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0"
    },
    "mutation_id": {
      "type": "string",
      "minLength": 1
    },
    "epoch_id": {
      "type": "string",
      "minLength": 1
    },
    "signals": {
      "type": "object",
      "additionalProperties": {
        "type": "number"
      }
    },
    "metadata": {
      "type": "object",
      "additionalProperties": {
        "type": ["string", "number", "boolean", "null"]
      }
    }
  }
}
